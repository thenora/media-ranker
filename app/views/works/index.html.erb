<h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
      </thead>
      <tbody>
      <!-- TODO this could be a partial for each type-->
        <% @albums.each do |album| %>
          <tr>
            <td><%= album.votes.count %></td>
            <td><%= link_to album.title, work_path(album.id) %></td>
            <td><%= album.creator %></td>
            <td><%= album.publication_year%></td>
            <td><%= link_to 'Upvote', work_votes_path(album.id), class: "btn btn-primary", method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
